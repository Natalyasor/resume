{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
	<main>
		<section>

			<div class="card">
				<div class="card-header">
					<h3 class="text-primary">{{make}} {{model}}</h3>
					<strong>{{year}} {{color}}</strong>
				</div>
			</div>
			<hr>
			<br>
			<h3>Seats</h3>
			{{#with features}}
			{{#with interior}}
			{{#with seats}}
			<strong>{{material}} ({{color}})</strong>
			<br>
			{{#if heated}} <strong>heated</strong> {{/if}}
			<br>
			{{#if ventilated}} <strong>ventilated</strong>{{/if}}
			<br>
			{{/with}}
			<br>
			<h3>Dashboard</h3>
			{{#with dashboard}}
			<strong>{{material}} ({{color}})</strong>
			<br>
			<h3>Display</h3>
			{{#with display}}
			<strong>{{type}} - {{size}}</strong>
			<strong>{{resolution}}</strong>
			<br>
			{{#if touchscreen}} <strong>touchscreen</strong> {{/if}}
			{{/with}}
			{{/with}}
			<br>
			<h3>Audio</h3>
			{{#with audio}}
			<strong>{{system}} {{speakers}}</strong>
			<br>
			{{#if subwoofer}} <strong>subwoofer</strong>{{/if}}
			<br>
			{{#if bluetooth}} <strong>bluetooth</strong>{{/if}}
			<br>
			{{#if USB}} <strong>USB</strong>{{/if}}
			{{/with}}
			{{/with}}
			<br>
			<h3>Exterior Wheels</h3>
			{{#with exterior}}
			{{#with wheels}}
			<strong>{{size}} ({{type}})</strong>
			<br>
			<strong>{{color}}</strong>
			{{/with}}
			<br>
			<h3>Headlights</h3>
			{{#with headlights}}
			<strong>{{brightness}} ({{type}})</strong>
			<br>
			{{#if automatic}}<strong>automatik</strong>{{/if}}
			{{/with}}
			{{/with}}
			<br>
			<h3>Safety Airbags</h3>
			{{#with safety}}
			{{#with airbags}}
			<strong>{{front}}-{{side}}-{{knee}}-{{rear}}</strong>
			{{/with}}
			<br>
			<h3>Assistance</h3>
			{{#with assistance}}
			{{#if blind_spot_monitoring}}<strong>blind_spot_monitoring</strong>{{/if}}
			<br>
			{{#if rear_cross_traffic_alert}}<strong>rear_cross_traffic_alert</strong>{{/if}}
			<br>
			{{#if lane_departure_warning}}<strong>lane_departure_warning</strong>{{/if}}
			<br>
			{{#if adaptive_cruise_control}}<strong>adaptive_cruise_control</strong>{{/if}}
			<br>
			{{#if collision_warning}}<strong>collision_warning</strong>{{/if}}
			{{/with}}
			{{/with}}
			{{/with}}
			<br>
			<h3>Engine</h3>
			{{#with engine}}
			<strong>{{type}} {{displacement}}</strong>
			<br>
			<strong>{{horsepower}} - {{torque}}</strong>
			<br>
			{{#with transmission}}
			<strong>{{type}} {{gears}}</strong>
			{{/with}}
			{{/with}}
			<br>
			<br>
			<h3>Fuel_economy</h3>
			{{#with fuel_economy}}
			<strong>{{city}} {{highway}} {{combined}}</strong>
			{{/with}}
			<br>
			<h3>Price</h3>
			{{#with price}}
			<strong>{{base}} - {{destination}}</strong>
			<br>
			<strong>{{total}}</strong>
			<h3>Option</h3>
			{{#with options}}
			<strong>{{navigation}} - {{moonroof}} - {{premium_paint}}</strong>
			{{/with}}
			{{/with}}
		</section>
	</main>
</div>





