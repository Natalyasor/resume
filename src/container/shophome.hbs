{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>
	<div class="card">
		{{#with navigation}}
		<div class="nav">
			{{#each links}}
			<div class="nav-item">
				<a href="{{href}}" class="nav-link">{{text}}</a>
			</div>
			{{/each}}
			<button class="btn btn-link disabled">Disabled</button>
		</div>

		{{/with}}
	</div>
	<br>
	{{#with newsBlock}}
	<h2 class="text-center">{{title}}</h2>
	<br>
	<div class="row g-2">
		{{#each cards}}
		<div class="card col-3">
			<div class="card-header">{{title}}
				{{#if isTop}}
				<div class="badge text bg-danger">isTop</div>
				{{/if}}
				{{#if isNew}}
				<div class="badge text bg-success">isNew</div>
				{{/if}}
			</div>
			<p>{{description}}</p>

		</div>
		{{/each}}
	</div>
	{{/with}}
	<br>
	<br>
	<hr>
	<br>
	<br>
	{{#with goodsBlock}}
	<div class="nav">
		<div class="nav nav-tabs">
			{{#each tabs}}
			{{#if isActive}}{{text}}{{/if}}
			{{#if isDisabled}}{{text}}{{/if}}
			{{/each}}
		</div>
	</div>
	<br>
	<br>
	<div class="row g-4">
		{{#each cards}}
		<div class="card col-4">
			<img src="{{image}}">
			<div class="card-body">
				<strong>{{title}}</strong>
				<p>{{description}}</p>
				{{#if isHot}}
				<div class="badge text bg-warning">isHot</div>
				{{/if}}
				{{#if isNew}}
				<div class="badge text bg-primary">isNew</div>
				{{/if}}
			</div>
		</div>
		{{/each}}
	</div>
	{{/with}}
	<br>
	<br>
	<hr>

	{{#with subscribe}}
	<div class="card text bg-secondary">
		<div class="card-body">
			<h2>{{header}}</h2>
			<p>{{description}}</p>
			<div class="nav">
				<div class="nav-item col-3">
					{{#each buttons}}
					<a href="{{link}}" class="btn btn-primary">{{text}}</a>
					{{/each}}
				</div>
			</div>
		</div>
	</div>
	{{/with}}

	<br>
	<br>
	<hr>
	{{#with service}}
	<div class="card text bg-success">
		<div class="card-body">
			<h2 class="text-center">{{title}}</h2>
			<p class="text-center">{{description}}</p>
			<div class="nav">
				<div class="nav-item">
					{{#each buttons}}
					<a href="https://www.youtube.com/" class="btn btn-primary">{{text}}</a>
					{{/each}}
				</div>
			</div>
		</div>
	</div>
	{{/with}}
	<br>
	<hr>

	<div class="nav">
		{{#each footer}}
		<div class="nav-item col-2">
			{{#each this}}
			<a href="{{link}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
			{{/each}}
		</div>
		{{/each}}
	</div>
</main>






