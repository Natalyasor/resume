{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>
	<div>
		<a href="https://github.com/" class="btn btn-link">Home</a>
		<a href="https://www.google.com/" class="btn btn-link">Contacts</a>
		<a href="https://www.youtube.com/" class="btn btn-link">Help</a>
		<a href="https://nodejs.org/en/" class="btn btn-primary">Lets stark</a>
	</div>
	<hr>
	<br>
	{{#with header}}
	<h1>{{title}}</h1>
	<p>{{description}}</p>
	<a href="https://www.youtube.com/" class="btn btn-primary">Learn More</a>
	{{/with}}
	<hr>
	<br>
	{{#with city}}
	<h2 class="card-title">{{title}}</h2>
	<br>
	<div class="row g-5 gy-5">

		<br>
		{{#each cards}}
		{{#with picture}}
		<div class="card col-6">
			<img src="https://picsum.photos/400/200" alt="New York">
			{{/with}}
			<div class="card-body">
				<div class="card-title">{{title}}</div>
				<p>{{description}}</p>

				{{#with button}}
				<a href="https://github.com/" class="btn btn-primary">Read</a>
				{{/with}}
			</div>
		</div>
		{{/each}}
	</div>
	</div>
	{{/with}}
	<br>
	<br>
	<hr>

	{{#with winner}}
	<h2 class="card-title">{{title}}</h2>
	<br>
	<br>
	{{#with table}}
	<table class="table">
		<thead>
			<tr>
				{{#each head}}
				<th>{{this}}</th>
				{{/each}}
			</tr>
		</thead>
	</table>
	<table class="table">
		{{#each user}}
		<tbody>
			<tr>
				<th>{{place}}</th>
				<td>{{name}}</td>
				<td>{{surname}}</td>
				<td>{{nickname}}</td>
			</tr>
		</tbody>
		{{/each}}
	</table>
	{{/with}}
	{{/with}}
	<br>
	<br>
	<hr>
	{{#with gallery}}
	<h2>{{title}}</h2>
	<br>
	<div class="row">
		{{#each cards}}
		<div class="col-4">
			<div class="card">
				<div class="card-header">{{name}}</div>
				<ul class="list-group">
					{{#each items}}
					<li class="list-group-item">{{this}}</li>
					{{/each}}
				</ul>
			</div>
		</div>
		{{/each}}
	</div>
	{{/with}}
	<br>
	<br>
	<hr>
	{{#with relaxion}}
	<div class="display-3">{{title}}</div>
	<br>
	<div class="row g-2 gy-5">
		{{#each cards}}
		<div class="col-6">
			<div class="card text bg-secondary">
				<div class="card-header">{{header}}</div>
				<div class="card-body">
					<div class="card-title">{{title}}</div>
					<p>{{description}}</p>
				</div>
			</div>
		</div>
		{{/each}}
	</div>
	{{/with}}
	<br>
	<br>
	<hr>
	<br>
	{{#with rest}}
	<div class="row">
		{{#each cards}}
		<div class=" card col-6">
			<div class="card-header text-center">{{header}}</div>
			<div class="card-body text-center">
				<strong class="card-title">{{title}}</strong>
				<p>{{description}}</p>
				<p class="btn btn-primary ">{{button}}</p>
				<div class="card-footer text-center">{{footer}}</div>
			</div>

		</div>
		{{/each}}
	</div>
	{{/with}}
	<br>
	<br>
	<hr>
	{{#with proposition}}
	<h2 class="display-2">{{title}}</h2>
	<br>
	<div class="row">
		{{#each card}}
		<div class="card col-6 text bg-warning">
			<div class="card-header">{{header}}</div>
			<div class="card-body">
				<div class="card-title">{{title}}</div>
				<p>{{description}}</p>
			</div>

		</div>
		{{/each}}
	</div>
	{{/with}}
	<br>
	<br>
	<hr>

	{{#with footer}}
	<h5>{{title}}</h5>
	{{#each navigation}}
	<a href={{link}} class="btn btn-link">{{text}}</a>
	{{/each}}
	<br>
	{{#each socialMedia}}
	<a href={{link}} class="btn btn-outline-dark">{{name}}</a>
	{{/each}}
	<br>
	{{#each partners}}
	<a href={{link}} class="btn btn-info">{{name}}</a>
	{{/each}}

	<br>
	{{/with}}










</main>






