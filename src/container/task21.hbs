{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
	<main>
		<section>
			{{#with heading}}
			{{#with main}}
			<h1>{{title}}</h1>
			<p>{{text}}</p>

			{{#with button_text}}
			<strong>{{solid}}</strong>
			<br>
			<strong>{{outline}}</strong>
			{{/with}}
			{{/with}}
			<br>
			<hr>
			{{#with second}}
			<h2>{{title}}</h2>
			<p>{{text}}</p>

			{{#with button_text}}
			<strong>{{solid}}</strong>
			<br>
			<strong>{{outline}}</strong>
			{{/with}}
			<hr>
			{{/with}}

			{{#with subblock}}
			<h2>{{title}}</h2>
			<p>{{text}}</p>
			{{#with button_text}}
			<strong>{{solid}}</strong>
			<br>
			<strong>{{outline}}</strong>
			{{/with}}
			<hr>
			{{/with}}
			<br>
			{{/with}}

			{{#with nested_display}}
			<h2>{{title}}</h2>
			{{#with children_display}}
			<h2>{{title}}</h2>
			<p>{{text}}</p>
			{{#with button}}
			<strong>{{text}}</strong>
			{{/with}}
			{{/with}}
			<br>
			<br>
			<strong>{{header_text}}</strong>
			<br>
			{{#with button}}
			<strong>{{text}}</strong>
			{{/with}}
			{{/with}}
			<hr>
			{{#with paragraph}}
			<h2>{{title}}</h2>
			<p>{{text}}</p>
			<br>
			{{#with button}}
			<strong>{{text}}</strong>
			<a href="https://google.com" target="_blank">Google</a>
			{{/with}}
			<br>
			{{#each list_name}}
			<li>{{text}}</li>
			<a href="https://github.com/" target="_blank">Github</a>
			{{/each}}
			{{/with}}
			<br>
			<br>
			<br>
			<div>
				<main>
					<div class="card">
						<div class="card-body">

							<div class="card">
								<div class="card-body">
									<h1>H1 Heading</h1>
									<p>Paragraph</p>
									<br>
									<div><button class="btn btn-primary">Primary</button></div>
									<br>
									<div><button class="btn btn-outline-primary">Outline Primary</button></div>
								</div>
							</div>
							<br>
							<div class="card">
								<div class="card-body">
									<h2>Heading second</h2>
									<p>Paragraph</p>
									<br>
									<div><button class="btn btn-secondary">Secondary</button></div>
									<br>
									<div><button class="btn btn-outline-secondary">Secondary</button></div>
								</div>
							</div>
							<br>
							<div class="card">
								<div class="card-body">
									<h3>Heading subblock</h3>
									<p>Paragraph</p>
									<div><button class="btn btn-dark">Dark</button></div>
									<br>
									<div><button class="btn btn-outline-dark">Dark</button></div>
								</div>
							</div>
						</div>
					</div>
					<br>


					<div class="card">
						<div class="card-body">
							<div class="display-1">Display 1 nested</div>
							<br>

							<div class="card">
								<div class="card-body">
									<div class="display-4">Display 4 children</div>
									<p>Paragraph</p>
									<div><button class="btn btn-outline-warning">Warning</button></div>
								</div>
							</div>
							<br>
							<h6> H6 Heading</h6>
							<button class="btn btn-info">Info</button>
						</div>
					</div>
					<br>

					<div class="card">
						<div class="card-body">
							<p class="text-uppercase">Paragraph</p>
							<p>Paragraf</p>
							<button class="btn btn-link">Link</button>



							<div class="card">
								<div class="card-body">
									<li>
										<button class="btn btn-link">Link</button>
									</li>
									<li>
										<button class="btn btn-link">Link</button>
									</li>
								</div>
							</div>


						</div>

				</main>

			</div>

		</section>
	</main>
</div>





