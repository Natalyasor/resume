{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<main>
	<div clss="row">
		<div class="col-8">
			<div class="card">
				<div class="card-body">
					{{#with person}}
					<h3>{{name}}</h3>
					<div class="text text-end">{{text}}</div>
					{{/with}}
				</div>
			</div>
			<br>
			<br>
			<div class="col-8">
				{{#with Inform}}
				<br>
				<p>{{description}}</p>
				{{/with}}
			</div>
			<div>

				<div class="row">
					<div class="col-3 mb-3">
						{{#each buttons}}
						<br>
						<a href="{{link}}" class="btn btn-primary mb-2">{{text}}</a>
						{{/each}}

					</div>
				</div>

			</div>
		</div>
	</div>
</main>
