{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
	<main>
		<section>
			{{#with page_header}}
			<h1 class="text-center">{{title}}</h1>
			<p class="text-center">{{description}}</p>
			{{/with}}
			<div class="card">
				<div class="card-body">
					{{#with section}}
					{{#with about_us}}
					{{#with title_list}}
					<div class="display-6 text-end">{{main}}</div>
					<h2 class="text-end">{{sub}}</h2>
					<button class="btn btn-info">Info</button>
					{{/with}}
				</div>
			</div>



			{{/with}}
			<br>
			<div class="card">
				<div class="card-body">
					{{#with advantage}}
					<div class="display-5">{{title}}</div>
					<br>
					<div class="card">
						<div class="card-body">
							{{#with efficiency}}
							<strong class="display-4">{{title}}</strong>
							<br>
							<h6>{{sub_title}}</h6>
							<p>{{description}}</p>
							<button class="btn btn-outline-warning">Warning</button>
							{{/with}}
						</div>
					</div>

					<br>

					<div class="card">
						<div class="card-body">
							{{#with innovation}}
							<div class="display-4 text-center">{{title}}</div>
							<h6 class="text-center">{{sub_title}}</h6>
							<p class="text-center">{{description}}</p>
							<button class="btn btn-outline-warning">Warning</button>
							{{/with}}
						</div>
					</div>

					<br>

					<div class="card">
						<div class="card-body">
							{{#with collaboration}}
							<div class="display-4 text-end">{{title}}</div>
							<h6 class="text-end">{{sub_title}}</h6>
							<p class="text-end">{{description}}</p>
							<button class="btn btn-outline-warning">Warning</button>
							{{/with}}
						</div>
					</div>
					{{/with}}
				</div>
			</div>
			<br>


			<div class="card">
				<div class="card-body">
					{{#with agreement}}
					<div class="display-5">{{title}}</div>
					{{#with info}}
					<br>
					<div class="card">
						<div class="card-body">
							<h5>{{sub_title}}</h5>
							<br>
							<div class="card">
								<div class="card-body">
									{{#with detail}}
									<p>{{text}}</p>

									<button class="btn btn-success">Success</button>
									{{/with}}
								</div>
							</div>
							{{/with}}
							{{/with}}
							{{/with}}
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</div>






