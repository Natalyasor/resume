{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
	<main>
		{{#with navigation}}
		<div class="nav">
			{{#each links}}
			<div class="nav">
				<div class="nav nav-link">
					<a href="{{href}}">{{text}}</a>
				</div>
				{{/each}}
			</div>
			{{/with}}
			<br>
			<br>
	</main>
</div>
<main>
	<h1>{{header}}</h1>
	<br>
	<br>
	{{#with contacts_data}}
	<h2>{{title}}</h2>
	{{#each buttons}}
	<button class="btn btn-warning">{{text}}</button>
	{{/each}}
	{{/with}}


	{{#with form}}
	{{#with input}}
	{{#with surname}}
	<div class="row">

		<label class="form-label">{{label}}</label>
		<input class="form-control">
		<div class="form-text"></div>

	</div>
	{{/with}}
	{{/with}}
	{{/with}}
</main>




