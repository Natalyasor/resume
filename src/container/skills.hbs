{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        <section>
            <h2>{{>title data="My Skills"}}</h2>
            <ul>
                {{#each main.skills}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </section>
        <section>
            <h3>{{>title data="My Hobbies"}}</h3>
            <ul>
                {{#each main.Hobbies}}
                <li>
                    {{name}} ({{isMain}})
                    {{#if isMain includeZero=true}} (favourite) {{/if}}
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
</div>

