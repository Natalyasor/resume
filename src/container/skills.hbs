{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        <section>
            <div class="card col-6">
                <div class="card-body">
                    <h2 class="card-header">{{>title data="My Skills"}}</h2>

                    <ul>
                        {{#each main.skills}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </section>
        <section>
            <div class="card col-6">
                <div class="card-body">
                    <h3 class="card-header">{{>title data="My Hobbies"}}</h3>
                    <ul>
                        {{#each main.Hobbies}}
                        <li>
                            {{name}} ({{isMain}})
                            {{#if isMain includeZero=true}} (favourite) {{/if}}
                        </li>
                        {{/each}}
                </div>
            </div>
            </ul>
        </section>
    </main>
</div>

